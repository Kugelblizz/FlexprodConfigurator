// ###### task interaction queries

query selectAllTaskInteractions {
  description: "Get all taskInteractions"
  statement: 
    SELECT at.jku.cis.taskInteraction
}

query selectTaskInteractionByHash {
  description: "Get taskInteractions"
  statement: 
    SELECT at.jku.cis.taskInteraction
      WHERE (hash == _$HASH)
}

query selectTaskInteractionsByMarketplace {
  description: "Get taskInteractions from a marketplace"
  statement: 
    SELECT at.jku.cis.taskInteraction
      WHERE (marketplaceId == _$ID)
}

query selectTaskInteractionsByType {
  description: "Get taskInteraction types"
  statement: 
    SELECT at.jku.cis.taskInteraction
      WHERE (taskInteractionType == _$TYPE)
}

query selectTaskInteractionsForTask {
  description: "Get all interactions of a task"
  statement:
    SELECT at.jku.cis.taskInteraction
      WHERE (taskId == _$ID)
}

query selectTaskInteractionsForVolunteer {
  description: "Get all interactions of a volunteer"
  statement:
    SELECT at.jku.cis.taskInteraction
      WHERE (volunteerId == _$ID)
}

