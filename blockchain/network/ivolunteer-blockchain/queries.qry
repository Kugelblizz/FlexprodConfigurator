// ###### marketplaces queries

query selectAllMarketplaces {
  description: "Get all marketplaces"
  statement: 
    SELECT at.jku.cis.Marketplace
}

query selectMarketPlaceByID {
  description: "Get Mmrketplace by ID"
  statement: 
    SELECT at.jku.cis.Marketplace
      WHERE (id == _$ID)
}

